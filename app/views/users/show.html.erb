<%= content_for(:title, @user.name ) %>
<article id="user">
    <header>
        <h1><%= @user.name %></h1>
        <h1><%= @user.email %></h1>
    </header>

    <br>
    <footer>
        <nav>
        <% if current_user?(@user) %>
            <%= link_to 'Edit account', edit_user_path(@user), class: "button delete" %>
            <%= button_to 'Delete User', user_path(@user), method: :delete, remote: true, 
             data: { confirm: 'Are you sure!'}, class: "button delete" %>
             <% end %>
        </nav>
    </footer>
</article>